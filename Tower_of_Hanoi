#include <stdio.h>

void towers(int n,char src,char temp,char dest){
    if(n==0)    return;
    towers(n-1,src,dest,temp);
    printf("Move %d from %c to %c\n",n,src,dest);
    towers(n-1,temp,src,dest);
}

int main() {
    int t;
    scanf("%d",&t);
    while(t--){
        int n;
        scanf("%d",&n);
        int c=(1<<n)-1;
        printf("%d\n",c);
        towers(n,'A','B','C');
    }
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
